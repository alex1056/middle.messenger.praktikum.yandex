  "name": "chat-app",
  "version": "1.0.0",
  "description": "Реализация чата SPA",
  "main": "index.js",
  "scripts": {
    "check-types": "tsc",
    "compile": "babel src -d lib --extensions '.ts,.tsx'",
    "test": "./node_modules/.bin/mocha",
    "test-watch": "npm run test -- --watch",
    "stylelint": "npx stylelint **/*.scss",
    "eslint": "eslint . --ext .ts",
    "clear": "rimraf ./dist/*",
    "dev": "cross-env NODE_ENV=development webpack serve --mode development --open",
    "build": "cross-env NODE_ENV=production rimraf dist && webpack --mode production",
    "start": "npm run build && node server.ts",
    "pre-commit": "lint-staged --quiet",
    "prepare": "husky install"
  },
  "directories": {
    "src": "./src",
    "test": "./test"
  },
