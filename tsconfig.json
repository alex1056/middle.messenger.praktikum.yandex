{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "es2016",
    "declaration": false,
    "module": "commonjs",
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "sourceMap": true,
    "noEmit": false,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "test/index.spec.ts"],
  "exclude": ["node_modules"]
}
