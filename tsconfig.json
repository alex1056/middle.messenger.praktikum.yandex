{
  "compilerOptions": {
    "baseUrl": ".",
    // "outDir": "dist",
    "target": "es2020",
    "moduleResolution": "node",
    "declaration": false,
    "module": "ES2020",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "sourceMap": true,
    "noEmit": false,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "test/index.spec.ts"],
  "exclude": ["node_modules"]
}
